<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center|top"
    xmlns:loginView="http://schemas.android.com/apk/res-auto"


    >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:id="@+id/back"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@drawable/button_selector"
                android:onClick="back"
                android:text="@string/arrow_back"
                android:textColor="#ffff"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#ffff"

                android:fontFamily="@font/brandongrotesque_light"
                android:text="Krok 2 z 5"
                android:id="@+id/hello"
                />
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="-13dp"
                android:layout_gravity="right"
                android:id="@+id/alert_image"
                android:background="@drawable/logo_small"/>



        </LinearLayout>


        <TextView
            android:id="@+id/textView"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Czy sytuacja zagraża życiu?"
            android:textStyle="bold"

            android:textColor="#ffffff"
            android:textSize="25dp"
            android:fontFamily="@font/brandongrotesque_light"
            />
        <Button
            android:layout_marginLeft="5dp"
            android:layout_width="375dp"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            android:text="TAK"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:fontFamily="@font/brandongrotesque_light"
            android:onClick="yes"
            android:background="@drawable/button_selector"/>

        <Button
            android:layout_marginLeft="5dp"
            android:layout_width="375dp"
            android:layout_height="100dp"
            android:text="NIE"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:fontFamily="@font/brandongrotesque_light"
            android:onClick="no"
            android:background="@drawable/button_selector"/>

        <TextView
            android:layout_marginTop="115dp"
            android:layout_marginBottom="5dp"

            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Zakończ wypełnianie i wyślij podane informacje "
            android:textStyle="bold"

            android:textColor="#ffffff"
            android:textSize="13dp"
            android:fontFamily="@font/brandongrotesque_light"
            />
        <TextView

            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Operator prawdopodobnie odzdzwoni"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"

            android:textColor="#ffffff"
            android:textSize="13dp"
            android:fontFamily="@font/brandongrotesque_light"
            />
        <Button
            android:layout_marginBottom="50dp"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="67dp"
            android:fontFamily="@font/brandongrotesque_light"
            android:textStyle="bold"

            android:text="Zakończ              "
            android:background="@drawable/buttonfinish_selector"
            />


    </LinearLayout>

</LinearLayout>