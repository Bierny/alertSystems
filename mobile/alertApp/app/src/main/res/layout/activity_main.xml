<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center|top"
    xmlns:loginView="http://schemas.android.com/apk/res-auto"


    >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/alert_image"
            android:background="@drawable/logo_small"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="#ffff"
            android:fontFamily="@font/brandongrotesque_light"
            android:text="@string/witaj"
            android:id="@+id/hello"
            />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_id"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="3dp"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center_vertical"
                app:civ_border_color="#202735" />

        </LinearLayout>

        <com.facebook.login.widget.LoginButton
            android:id="@+id/fb_login_btn"
            android:layout_width="100dp"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="5dp"
            android:layout_height="20dp"
            android:gravity="right"
            android:layout_gravity="right"/>

        <TextView
            android:id="@+id/textView"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Wezwij pomoc "
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="25dp"
            android:fontFamily="@font/brandongrotesque_light"
            />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Wciskając przycisk poniżej "
            android:textStyle="bold"

            android:textColor="#ffffff"
            android:textSize="10dp"
            android:fontFamily="@font/brandongrotesque_light"
            />

        <at.markushi.ui.CircleButton
            android:layout_width="220dip"
            android:layout_height="220dip"
            android:src="@drawable/ic_action_tick"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            app:cb_color="#1aa7b8"
            android:layout_gravity="center"
            android:onClick="start"
            app:cb_pressedRingWidth="8dip" />

        <TextView
            android:layout_marginTop="75dp"
            android:layout_marginBottom="15dp"

            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Lub skontaktuj się bezpośrednio z operatorem "
            android:textStyle="bold"

            android:textColor="#ffffff"
            android:textSize="10dp"
            android:fontFamily="@font/brandongrotesque_light"
            />
        <Button
            android:layout_marginBottom="50dp"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="67dp"
            android:fontFamily="@font/brandongrotesque_light"
            android:textStyle="bold"

            android:text="           Zadzwoń na 112"
            android:background="@drawable/callbtn"
            />


            </LinearLayout>

</LinearLayout>