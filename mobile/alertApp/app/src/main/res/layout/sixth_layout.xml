<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center|top"
    xmlns:loginView="http://schemas.android.com/apk/res-auto"


    >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:id="@+id/back"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:background="@drawable/button_selector"
                android:onClick="back"
                android:text="@string/arrow_back"
                android:textColor="#ffff"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="38dp"
                android:layout_marginTop="2dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#ffff"

                android:fontFamily="@font/brandongrotesque_light"
                android:text="Krok 3 z 5"
                android:id="@+id/hello"
                />
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="-25dp"
                android:layout_gravity="right"
                android:id="@+id/alert_image"
                android:background="@drawable/logo_small"/>



        </LinearLayout>


        <TextView
            android:id="@+id/textView"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Opis zdarzenia"
            android:textStyle="bold"

            android:textColor="#ffffff"
            android:textSize="25dp"
            android:fontFamily="@font/brandongrotesque_light"
            />
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Pamietaj: w razie potrzeby operator oddzwoni. Podaj tylko najważniejsze informacje"
            android:textStyle="bold"

            android:textColor="#ffffff"
            android:textSize="15dp"
            android:fontFamily="@font/brandongrotesque_light"
            />
        <EditText
            android:layout_marginLeft="5dp"
            android:layout_width="305dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:id="@+id/edit_text_id"
            android:textSize="20dp"
            android:inputType="textMultiLine"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:fontFamily="@font/brandongrotesque_light"
            android:background="@drawable/edittext"/>

        <Button
            android:layout_marginLeft="5dp"
            android:layout_width="375dp"
            android:layout_height="100dp"
            android:text="Wyślij zgłoszenie"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:fontFamily="@font/brandongrotesque_light"
            android:onClick="next"
            android:background="@drawable/button_selector"/>




    </LinearLayout>

</LinearLayout>